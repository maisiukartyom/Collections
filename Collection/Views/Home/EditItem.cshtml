@model Item

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 id="hed" class="text-primary">Edit</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label id="nname">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label id="ttags">Tags</label>
            <input asp-for="Tags" class="form-control" />
            <span asp-validation-for="Tags" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label id="ccol">Collection</label>
            <input type="text" asp-for="Collection" name="collection" class="form-control" />
        </div>

        <button id="bted" type="submit" class="btn btn-primary" style="width:150px">Edit</button>
        <a id="bback" asp-route-id="@ViewData["Collection"]" asp-action="Collections" class="btn btn-secondary" style="width:150x">Back</a>
    </div>
</form>

<script>
    if (localStorage.getItem('lang') === "ru"){
        document.getElementById("bted").innerText = "Изменить"
        document.getElementById("bback").innerText = "Назад"
        document.getElementById("hed").innerText = "Изменить"
        document.getElementById("nname").innerText = "Название"
        document.getElementById("ttags").innerText = "Теги (через '_ + ,')"
        document.getElementById("ccol").innerText = "Коллекция"
    }
</script>