@{
	var returnUrl = ViewData["ReturnUrl"] as string;
}
@model User

<partial name="_Notification" />
	<link rel="stylesheet" href="~/css/login.css" />
	<link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">


	<div class="boddy">	
		<div class="main">  	
				<input type="checkbox" id="chk" aria-hidden="true">

					<div class="signup">
						<form method = "post" asp-action = "Signup">
							<label for="chk" aria-hidden="true">Sign up</label>
							<input asp-for="UserName" type="text"  placeholder="Username" required="">
							<input asp-for="Password" type="password"  placeholder="Password" required="">
							<button type="submit">Sign up</button>
						</form>
					</div>

					<div class="login">
						<form action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post">
							<label for="chk" aria-hidden="true">Login</label>
							<input type="text" name="username" placeholder="Username" required="">
							<input type="password" name="password" placeholder="Password" required="">
							<button>Login</button>
						</form>
					</div>
			</div>
</div>